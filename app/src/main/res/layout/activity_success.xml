<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_main_bg"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#F8F8F8"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Fetching Details"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="Generating  Details"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="History for child "
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="+91 ********** Details Generate"
                android:layout_width="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Please Be patient While we generate history of your child"
                android:layout_width="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content"/>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                app:lottie_rawRes="@raw/loading_alldata"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp">

                            <ProgressBar
                                android:id="@+id/process1_loading"
                                android:indeterminateTint="#80000000"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/ic_check"
                                android:id="@+id/process1_check"
                                android:tint="@color/app_color"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_process1"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:text="Collect your request"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp">

                            <ProgressBar
                                android:id="@+id/process2_loading"
                                android:indeterminateTint="#80000000"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/ic_check"
                                android:id="@+id/process2_check"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:tint="@color/app_color" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_process2"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:text="Validating your request"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp">

                            <ProgressBar
                                android:id="@+id/process5_loading"
                                android:indeterminateTint="#80000000"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/ic_check"
                                android:id="@+id/process5_check"

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:tint="@color/app_color" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_process5"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:text="Sending Request"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp">

                            <ProgressBar
                                android:id="@+id/process6_loading"
                                android:indeterminateTint="#80000000"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <ImageView
                                android:src="@drawable/ic_check"
                                android:id="@+id/process6_check"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:tint="@color/app_color" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_process6"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:text="Fetching Records"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp">

                            <ProgressBar
                                android:id="@+id/process7_loading"
                                android:indeterminateTint="#80000000"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <ImageView
                                android:src="@drawable/ic_check"

                                android:id="@+id/process7_check"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:tint="@color/app_color" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_process7"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:text="Compiling Results"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp">

                            <ProgressBar
                                android:id="@+id/process8_loading"
                                android:indeterminateTint="#80000000"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <ImageView
                                android:src="@drawable/ic_check"
                                android:id="@+id/process8_check"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:tint="@color/app_color" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_process8"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:text="Finalizing Process"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/btn_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Download"
            android:textSize="17dp"
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Please Wait..."
            android:textSize="17dp"
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>