<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/_4sdp"
       />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottom_nav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile Information"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name: "
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvName"
                            android:fontFamily="@font/poppins_light"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading..." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email: "
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins"

                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:fontFamily="@font/poppins_light"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading..." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone: "
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins"

                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvPhone"
                            android:fontFamily="@font/poppins_light"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading..." />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Plan Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/llPlanInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plan Information"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: "
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvPlanStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="@android:color/holo_green_dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plan: "
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvPlanType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            android:text="Monthly Plan" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expiry: "
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvPlanExpiry"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            android:layout_height="wrap_content"
                            android:text="Expires: 31 Dec 2024" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Max Numbers: "
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvMaxNumbers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            android:text="Max Numbers: 1" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- No Plan Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/llNoPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Active Plan"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You need an active premium plan to track child numbers."
                        android:textAlignment="center"
                        android:fontFamily="@font/poppins_light"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btnUpgradePlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Plans"
                        android:fontFamily="@font/poppins_semibold"

                        android:background="@drawable/bg_button"
                        android:textColor="@android:color/white"
                        android:padding="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Child Numbers Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Child Numbers"
                            android:textSize="20sp"
                            android:fontFamily="@font/poppins_semibold"

                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                        <TextView
                            android:id="@+id/tvChildNumbersCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Child Numbers: 0"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnAddNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Number"
                        android:background="@drawable/bg_button"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@android:color/white"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvChildNumbers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <TextView
                        android:id="@+id/tvNoNumbers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No child numbers added yet.\nTap 'Add Number' to get started."
                        android:textAlignment="center"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="16dp"
                        android:visibility="visible" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menu" />

</RelativeLayout>
